            <div class="modal-content">
                <div class="modal-header">
                    <div class="row">
                        <div class="col">
                            <h4 class="modal-title">Kreiranje kartona</h4>
                        </div>
                    </div>
                    <div class="row button">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
                <div class="modal-body">
                    <fieldset>
                        <div class="row">
                            <div class="col-lg-5">Pol</div>
                            <div class="col-lg-7">
                                @Html.TextBoxFor(m => m.Pol, new { @Value = "Pol", @class = "form-control", @id = "Pol" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-5">Ime</div>
                            <div class="col-lg-7 input">
                                @Html.TextBoxFor(m => m.Ime, new { @Value = "Ime", @class = "form-control", @id = "Ime" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-5">Prezime</div>
